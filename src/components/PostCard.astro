---
const { post } = Astro.props;

// Helper to format date
const formatDate = (dateString: string) => {
    if (!dateString) return "";
    return new Date(dateString).toLocaleDateString("zh-TW", {
        year: "numeric",
        month: "long",
        day: "numeric",
    });
};

const tags = post.frontmatter.tags || [];
// Use a placeholder image if none exists, or use the first image from frontmatter if available
const heroImage =
    post.frontmatter.image?.url ||
    `https://placehold.co/600x400/e5e7eb/a1a1aa?text=${encodeURIComponent(post.frontmatter.title)}`;
---

<a
    href={post.url}
    class="group block bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300 hover:-translate-y-1 border border-zinc-100 flex flex-col h-full"
>
    <div class="aspect-video overflow-hidden bg-zinc-100 relative">
        <img
            src={heroImage}
            alt={post.frontmatter.title}
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
            loading="lazy"
        />
        <div class="absolute top-3 left-3 flex gap-2">
            {
                tags
                    .slice(0, 2)
                    .map((tag: string) => (
                        <span class="px-2 py-1 bg-white/90 backdrop-blur text-rose-500 text-xs font-bold rounded-md shadow-sm">
                            #{tag}
                        </span>
                    ))
            }
        </div>
    </div>

    <div class="p-6 flex flex-col flex-grow">
        <div class="text-sm text-zinc-400 mb-2 font-mono">
            {formatDate(post.frontmatter.pubDate)}
        </div>
        <h3
            class="text-xl font-bold text-zinc-800 mb-3 group-hover:text-rose-500 transition-colors leading-tight"
        >
            {post.frontmatter.title}
        </h3>
        <p
            class="text-zinc-500 text-sm line-clamp-3 leading-relaxed mb-4 flex-grow"
        >
            {post.frontmatter.description || "點擊閱讀更多..."}
        </p>

        <div
            class="text-rose-500 text-sm font-medium flex items-center group-hover:gap-2 transition-all"
        >
            閱讀全文 <span>→</span>
        </div>
    </div>
</a>
