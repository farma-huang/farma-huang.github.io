---
import BaseLayout from "../layouts/BaseLayout.astro";
import { MapPin, Building2, Mail, Github } from "lucide-react";

const pageTitle = "關於我 - Farma";
---

<BaseLayout pageTitle={pageTitle}>
  <div
    class="bg-white rounded-3xl p-8 md:p-12 md:flex gap-12 items-start shadow-sm border border-zinc-100"
  >
    <!-- Left: Image -->
    <div
      class="md:w-1/3 flex flex-col items-center text-center md:items-start md:text-left mb-8 md:mb-0 shrink-0"
    >
      <div
        class="w-48 h-48 md:w-64 md:h-64 rounded-2xl overflow-hidden shadow-xl mb-6"
      >
        <img
          src="/assets/images/avatar_2.png"
          alt="Farma Huang"
          class="w-full h-full object-cover"
        />
      </div>

      <h1 class="text-2xl font-bold text-black mb-1">
        黃信發 <span class="text-zinc-600 text-lg font-normal ml-2">Farma</span>
      </h1>
      <p class="text-zinc-700 text-sm mb-6">開發者 / 前端架構師</p>

      <div class="space-y-2 text-sm font-medium text-zinc-800">
        <div class="flex items-center gap-2">
          <MapPin className="w-4 h-4 text-zinc-700" /> 台北, 台灣
        </div>
        <div class="flex items-center gap-2">
          <Building2 className="w-4 h-4 text-zinc-700" /> 奔騰網路科技
        </div>
        <div class="flex items-center gap-2">
          <Mail className="w-4 h-4 text-zinc-700" /> farmahuang@gmail.com
        </div>
        <a
          href="https://github.com/farma-huang"
          target="_blank"
          class="flex items-center gap-2 hover:text-black transition-colors"
        >
          <Github className="w-4 h-4 text-zinc-700" /> farma-huang
        </a>
      </div>
    </div>

    <!-- Right: Bio -->
    <div class="md:w-2/3 prose prose-zinc prose-lg">
      <h2 class="text-3xl font-bold text-zinc-900 mb-6 font-display">
        「哈囉，世界！」
      </h2>

      <p class="text-zinc-800 leading-relaxed font-medium">
        你好，這裡純粹是紀錄個人的學習心得。
      </p>
    </div>
  </div>
</BaseLayout>
